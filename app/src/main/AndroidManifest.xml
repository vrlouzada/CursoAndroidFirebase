<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.vrlsistemas.cursoandroidfirebase">

    <!-- Aplicativo com acesso a internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Autorizando nosso app acessar arquivos externos a ele dentro do nosso android -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/login"
        android:roundIcon="@drawable/login"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.CadastroUsuarioActivity" />
        <activity android:name=".Activity.PrincipalActivity" />
        <activity android:name=".Activity.UploadFotoActivity"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cadastro_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context="br.com.vrlsistemas.cursoandroidfirebase.Activity.CadastroUsuarioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CADASTRO DE USUÁRIO"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000"/>


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edtCadEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="10dp"
                />


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edtCadSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="10dp"
                />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edtCadSenha2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repita a senha"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="10dp"
                />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edtCadNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:inputType="text"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="10dp"
                />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrador"
                    android:textColor="#000"
                    android:textColorHint="#000"/>

                <RadioButton
                    android:id="@+id/rbAtend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atendente"
                    android:textColor="#000"
                    android:textColorHint="#000"/>

            </RadioGroup>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btnCadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar"
                android:background="#61380B"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:bootstrapBrand="secondary"
                app:bootstrapSize="xl"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:background="#61380B"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:bootstrapBrand="danger"
                app:bootstrapSize="xl"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                />


        </LinearLayout>



    </ScrollView>

</LinearLayout>
